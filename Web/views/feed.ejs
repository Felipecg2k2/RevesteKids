    <script>
        // =======================================================
        // FUN√á√ÉO SEGURA PARA ABRIR DETALHES
        // =======================================================
        async function handleVerDetalhes(itemId) {
            console.log('üéØ Tentando abrir detalhes do item:', itemId);
            try {
                if (typeof abrirModalDetalhes === 'function') {
                    await abrirModalDetalhes(itemId);
                } else {
                    console.error('‚ùå Fun√ß√£o abrirModalDetalhes n√£o encontrada, carregando script...');
                    // Tenta carregar o script dinamicamente
                    await carregarScriptModal();
                    if (typeof abrirModalDetalhes === 'function') {
                        await abrirModalDetalhes(itemId);
                    } else {
                        throw new Error('N√£o foi poss√≠vel carregar o modal de detalhes');
                    }
                }
            } catch (error) {
                console.error('‚ùå Erro ao abrir modal:', error);
                // Fallback: mostrar detalhes b√°sicos
                mostrarDetalhesBasicos(itemId);
            }
        }

        // Fun√ß√£o para carregar o script do modal dinamicamente
        function carregarScriptModal() {
            return new Promise((resolve, reject) => {
                if (document.querySelector('script[src="/js/item_modal.js"]')) {
                    resolve();
                    return;
                }
                
                const script = document.createElement('script');
                script.src = '/js/item_modal.js';
                script.onload = resolve;
                script.onerror = reject;
                document.head.appendChild(script);
            });
        }

        // Fallback b√°sico se o modal n√£o carregar
        function mostrarDetalhesBasicos(itemId) {
            const modal = document.getElementById('itemDetalhesModal');
            const modalContent = modal.querySelector('.rk-detalhes-content');
            
            if (!modal || !modalContent) {
                alert('Erro ao carregar detalhes. Tente novamente.');
                return;
            }

            modalContent.innerHTML = `
                <span class="fechar-btn" onclick="fecharModalDetalhes()">&times;</span>
                <h3>Detalhes do Item</h3>
                <p><strong>ID do Item:</strong> ${itemId}</p>
                <p>N√£o foi poss√≠vel carregar os detalhes completos.</p>
                <button onclick="window.location.href='/trocas/propor/${itemId}'" 
                        style="margin-top: 20px; padding: 10px 20px; background: #9370DB; color: white; border: none; border-radius: 6px; cursor: pointer;">
                    Propor Troca
                </button>
            `;
            modal.style.display = 'flex';
        }

        // Fun√ß√£o b√°sica para fechar modal
        function fecharModalDetalhes() {
            const modal = document.getElementById('itemDetalhesModal');
            if (modal) {
                modal.style.display = 'none';
            }
        }

        // =======================================================
        // C√ìDIGO DO CARROSSEL
        // =======================================================
        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.card-item');
            let currentIndex = 0;
            const globalBtnVoltar = document.getElementById('global-btn-voltar');
            const globalBtnProximo = document.getElementById('global-btn-proximo');
            const globalBtnTrocar = document.getElementById('global-btn-trocar');
            const btnAplicarFiltros = document.getElementById('btn-aplicar-filtros');
            const btnLimparFiltros = document.getElementById('btn-limpar-filtros');

            function updateCarousel() {
                console.log('Atualizando carrossel, √≠ndice atual:', currentIndex, 'Total de cards:', cards.length);
                
                cards.forEach((card, index) => {
                    card.classList.remove('active', 'next', 'prev', 'hidden');
                    
                    if (index === currentIndex) {
                        card.classList.add('active');
                    } else if (index === currentIndex + 1) {
                        card.classList.add('next');
                    } else if (index === currentIndex - 1) {
                        card.classList.add('prev');
                    } else {
                        card.classList.add('hidden');
                    }
                });

                // Atualizar estado dos bot√µes de navega√ß√£o
                if (globalBtnVoltar) {
                    globalBtnVoltar.classList.toggle('inactive', currentIndex === 0);
                }
                if (globalBtnProximo) {
                    globalBtnProximo.classList.toggle('inactive', currentIndex >= cards.length - 1);
                }

                // Atualizar link de troca
                if (globalBtnTrocar && cards[currentIndex]) {
                    const currentItemId = cards[currentIndex].dataset.id;
                    globalBtnTrocar.href = `/trocas/propor/${currentItemId}`;
                }

                // Verificar fim do carrossel
                if (currentIndex >= cards.length) {
                    document.getElementById('swipe-container').innerHTML = 
                        '<div class="no-items-message"><p>Voc√™ viu todas as pe√ßas do cat√°logo! Volte mais tarde.</p></div>';
                }
            }

            function nextCard() {
                if (currentIndex < cards.length - 1) {
                    currentIndex++;
                    updateCarousel();
                } else {
                    document.getElementById('swipe-container').innerHTML = 
                        '<div class="no-items-message"><p>Voc√™ viu todas as pe√ßas do cat√°logo! Volte mais tarde.</p></div>';
                }
            }

            function prevCard() {
                if (currentIndex > 0) {
                    currentIndex--;
                    updateCarousel();
                }
            }

            // Event Listeners para navega√ß√£o
            if (globalBtnVoltar) {
                globalBtnVoltar.addEventListener('click', prevCard);
            }

            if (globalBtnProximo) {
                globalBtnProximo.addEventListener('click', nextCard);
            }

            // Filtros
            document.querySelectorAll('.filter-button').forEach(button => {
                button.addEventListener('click', function() {
                    this.classList.toggle('active');
                });
            });

            if (btnAplicarFiltros) {
                btnAplicarFiltros.addEventListener('click', aplicarFiltros);
            }

            if (btnLimparFiltros) {
                btnLimparFiltros.addEventListener('click', limparFiltros);
            }

            // Swipe para mobile
            let startX = 0;
            let currentX = 0;

            cards.forEach(card => {
                card.addEventListener('touchstart', handleTouchStart);
                card.addEventListener('touchmove', handleTouchMove);
                card.addEventListener('touchend', handleTouchEnd);
            });

            function handleTouchStart(e) {
                startX = e.touches[0].clientX;
            }

            function handleTouchMove(e) {
                currentX = e.touches[0].clientX;
            }

            function handleTouchEnd() {
                const diff = startX - currentX;
                
                if (Math.abs(diff) > 50) {
                    if (diff > 0) {
                        nextCard();
                    } else {
                        prevCard();
                    }
                }
            }

            // Navega√ß√£o por teclado
            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft') {
                    prevCard();
                } else if (e.key === 'ArrowRight') {
                    nextCard();
                } else if (e.key === 'Escape') {
                    fecharModalDetalhes();
                }
            });

            function aplicarFiltros() {
                const filtros = {
                    genero: Array.from(document.querySelectorAll('input[name="genero"]:checked')).map(cb => cb.value),
                    tamanho: Array.from(document.querySelectorAll('.filter-button[data-filter-type="tamanho"].active')).map(btn => btn.dataset.value),
                    categoria: Array.from(document.querySelectorAll('.filter-button[data-filter-type="categoria"].active')).map(btn => btn.dataset.value),
                    condicao: Array.from(document.querySelectorAll('.filter-button[data-filter-type="condicao"].active')).map(btn => btn.dataset.value)
                };
                console.log('Aplicando filtros:', filtros);
                alert('Filtros aplicados! (Funcionalidade ser√° implementada)');
            }

            function limparFiltros() {
                document.querySelectorAll('.filter-button').forEach(btn => {
                    btn.classList.remove('active');
                });
                document.querySelectorAll('input[type="checkbox"]').forEach(cb => {
                    cb.checked = false;
                });
            }

            // Inicializar carrossel
            if (cards.length > 0) {
                updateCarousel();
            }

            // Fechar modal ao clicar fora
            const modal = document.getElementById('itemDetalhesModal');
            if (modal) {
                modal.addEventListener('click', (event) => {
                    if (event.target.id === 'itemDetalhesModal') {
                        fecharModalDetalhes();
                    }
                });
            }
        });
    </script>

